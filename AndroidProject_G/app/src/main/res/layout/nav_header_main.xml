<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_small_8dp"
    android:background="@drawable/common_layout_background_thumbnail_base"
    android:orientation="vertical"
    android:padding="@dimen/padding_medium_16dp"
    android:weightSum="5">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium_16dp"
        android:layout_weight="3"
        android:paddingTop="@dimen/padding_small_8dp"
        android:src="@drawable/main_img_profile"
        app:civ_border_color="@color/gray_EAEAEA"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/margin_small_8dp"
        android:text="@string/nav_header_title"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/nav_header_subtitle"
        android:textColor="@color/gray_EAEAEA" />
</LinearLayout>